3.Даны три переменные вещественного типа: A, B, C. Если их значения упорядочены по возрастанию, то удвоить их; в противном случае заменить значение 
каждой переменной на противоположное. Вывести новые значения переменных A, B, C.
#include "pt4.h"
using namespace std;

void Solve()
{
    Task("If16");
    float z, x, c;
    pt >> z >> x >> c;
    if ((z <= x) && (x <= c)) {
        z = z * 2;
        x = x * 2;
        c = c * 2;
        pt << z << x << c;
    }
    else {
        z = z * (-1);
        x = x * (-1);
        c = c * (-1);
        pt << z << x << c;
    }
}
